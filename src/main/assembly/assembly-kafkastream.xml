<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>kafkastream</id>
	<includeBaseDirectory>false</includeBaseDirectory>
	<formats>
		<format>tar.gz</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${basedir}/src/main/assembly/bin</directory>
			<outputDirectory>bin/</outputDirectory>
			<includes>
				<include>etl-kafkastream.sh</include>
			</includes>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/main/resources/kafkastream</directory>
			<outputDirectory>conf/</outputDirectory>
			<includes>
				<include>GZDPI.xml</include>
				<include>log4j.properties</include>
				<include>suffix-urlfilter.txt</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/main/assembly/bin</directory>
			<outputDirectory>./</outputDirectory>
			<includes>
				<include>autogzbroker.sh</include>
				<include>startgzStream.sh</include>
				<include>stopgzStream.sh</include>
				<include>cron</include>
			</includes>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/</directory>
			<outputDirectory>lib/</outputDirectory>
			<includes>
				<include>etl-1.0.jar</include>
			</includes>
		</fileSet>
		<!-- include compile source jar -->
		<fileSet>
			<directory>${basedir}/lib/kafkastream</directory>
			<outputDirectory>lib/</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>