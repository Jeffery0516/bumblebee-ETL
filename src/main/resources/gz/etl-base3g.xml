<?xml version = "1.0" encoding = "utf-8"?>
<etl>
	<writeLog property="conf/log/dblog.properties" />

	<contextProperty location="etl-base3g.properties" />
	
	<process id="base3g">
		<computingFrameworkConfigs>
			<property key="outputFormatClass"
				value="com.gsta.bigdata.etl.mapreduce.OnlyValueOutputFormat" />
			<property key="sourceEncoding" value="GBK" />
		</computingFrameworkConfigs>
		<sourceMetaData type="noSettingFieldsFlat" delimiter=",">
			<paths>
				<inputPath path="${inputPath}" />
			</paths>
		</sourceMetaData>
		<outputMetaData outputPath="${outputPath}" errorPath="${errorPath}">
			<values delimiter="|">
				<field id="*"/>
			</values>
		</outputMetaData>
		<transforms>
			<transform scope="map">		
				<function name="string2HexAscii" input="_9" output="_9"/>
			</transform>
		</transforms>
	</process>
</etl>